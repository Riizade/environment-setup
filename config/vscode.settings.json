{
  "editor.suggestSelection": "first",
  "editor.autoClosingQuotes": "never",
  "editor.autoClosingBrackets": "beforeWhitespace",
  "editor.autoClosingDelete": "never",
  "editor.autoSurround": "never",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true
  },
  "editor.fontFamily": "'FairfaxHaxHD Nerd Font', 'Iosevka', 'Fira Code Nerd Font Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.fontSize": 16,
  "editor.fontLigatures": true,
  "terminal.integrated.shell.linux": "/usr/bin/fish",
  "terminal.integrated.fontFamily": "'FairfaxHaxHD Nerd Font', 'Iosevka', 'Fira Code Nerd Font Mono', 'monospace', monospace, 'Droid Sans Fallback'"
}
